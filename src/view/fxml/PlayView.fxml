<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import view.BoardView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.PlayController"
            style="-fx-background-color: white; -fx-padding: 10">

    <left>
        <VBox style="-fx-border-color: grey; -fx-background-color: lightgrey">
            <ToolBar orientation="VERTICAL" style="-fx-alignment: top-center; -fx-background-color: transparent">
                <Button fx:id="startButton" text="Start"/>
                <Button fx:id="stopButton" text="Stop"/>
                <Button fx:id="tickButton" text="Tick"/>
                <Button fx:id="resetButton" text="Reset"/>
                <Button fx:id="switchButton" text="Switch to Build"/>
            </ToolBar>
        </VBox>
    </left>

    <center>
        <BoardView fx:id="board">
            <BorderPane.margin>
                <Insets topRightBottomLeft="10"/>
            </BorderPane.margin>
        </BoardView>
    </center>

    <bottom>

    </bottom>
</BorderPane>